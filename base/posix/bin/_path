#!/bin/bash # not really

# Extract path + filename, but without extension
function get_stemname # filename
{
    local f="$1"
    local stem="${f%.*}"
    echo "$stem"
}

# Extract path + filename, but without long extension.
function get_stemname_long # filename
{
    local f="$1"
    local stem="${f%%.*}"
    echo "$stem"
}

# Extract last extension
function get_ext # filename
{
    local f="$1"
    local stem="$(get_stemname "$f")"
    local ext="${f#$stem}"
    echo "${ext#.}"
}

# Extract all extensions
function get_ext_long # filename
{
    local f="$1"
    local stem="$(get_stemname_long "$f")"
    local ext="${f#$stem}"
    echo "${ext#.}"
}

